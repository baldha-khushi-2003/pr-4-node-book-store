<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body style="background-color:pink;">
    <form method="post" action="/formdata">

        <table
            class="mt-5 w-50 m-auto table-danger
             table-striped table border border-2 border-secondary text-center text-uppercase align-middle">
            <tr>
                <td>book name:-</td>
                <td><input type="text" class="w-100 p-2" name="name"></td>
            </tr>
            <tr>
                <td>book price:-</td>
                <td><input type="text" class="w-100 p-2" name="price"></td>
            </tr>
            <tr>
                <td>pages:-</td>
                <td>
                    <select name="page" class="w-100 p-2">
                        <option value="-----">***</option>
                        <% let page=["0-200","200-400","400-600"]; page.map((val)=>{
                            %>
                            <option value="<%= val %>">
                                <% }) %>
                            </option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>book author:-</td>
                <td><input type="text" class="w-100 p-2" name="author"></td>
            </tr>
            <tr class="m-3">
                <td colspan="2">
                    <input type="submit" value="submit" class="btn btn-light my-2">
                </td>
            </tr>

        </table>
        <table class="mt-5 w-50 m-auto table-danger table-striped table border border-2 border-secondary text-center">
            <tr class="text-uppercase">
                <th>name</th>
                <th>price</th>
                <th>page</th>
                <th>author</th>
                <th>action</th>
            </tr>
            <% record.map((val)=>{ %>
                <tr class="text-capitalize align-middle">
                    <td>
                        <%= val.name %>
                    </td>
                    <td>
                        <%= val.price %>
                    </td>
                    <td>
                        <%= val.page %>
                    </td>
                    <td>
                        <%= val.author %>
                    </td>
                    <td><button class="btn btn-light"><a href="/editdata?id=<%=val.id %>"
                                class="text-decoration-none text-dark">edit</a></button>
                        <button class="btn btn-light"><a href="/deletedata?id=<%=val.id %>"
                                class="text-decoration-none text-dark">delete</a></button>
                    </td>
                </tr>
              <% }) %>
        </table>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
        crossorigin="anonymous"></script>
</body>

</html>