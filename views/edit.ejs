<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <form method="post" action="/updatedata">

        <table class="mt-5 w-50 m-auto table-dark table-striped table border border-2 border-secondary text-center text-uppercase align-middle">
            
            <input type="hidden" value="<%= data.id %>" name="id">
            <tr>
                <td>book name:-</td>
                <td><input type="text" value="<%=data.name %>" class="w-100 p-2" name="name"></td>
            </tr>
            <tr>
                <td>book price:-</td>
                <td><input type="text" value="<%=data.price %>"  class="w-100 p-2" name="price"></td>
            </tr>
           <tr>
            <td>pages:-</td>
            <td>
                <select name="page" class="w-100 p-2">
                    <option value="-----">------</option>
                    <% let page=["0-200","200-400","400-600"];
                    page.map((val)=>{
                        %>
                        <option <% if(data.page==val){ %> selected <% } %> > <%= val %></option>
                  <% }) %>
                </select>
            </td>
           </tr>
           <tr>
            <td>book author:-</td>
            <td><input type="text" value="<%= data.price %>"  class="w-100 p-2" name="author"></td>
        </tr>
      <tr class="m-3">
           <td colspan="2"><button class="btn btn-light my-2">submit</button></td>
      </tr>
            
        </table>

    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"></script>
</body>

</html>